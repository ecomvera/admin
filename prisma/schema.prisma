model GroupCategory {
  id     String @id @default(auto()) @map("_id") @db.ObjectId
  name   String
  slug   String @unique
  image  String
  banner String

  parentId String?   @db.ObjectId
  parent   Category? @relation(fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)

  products GroupCategoryProducts[]

  isActive  Boolean  @default(false)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("groupCategories")
}

model GroupCategoryProducts {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  productId String  @db.ObjectId
  product   Product @relation(fields: [productId], references: [id], onDelete: Cascade)

  groupCategoryId String        @db.ObjectId
  groupCategory   GroupCategory @relation(fields: [groupCategoryId], references: [id], onDelete: Cascade)

  @@unique([productId, groupCategoryId])
  @@map("groupCategoryProducts")
}

model Category {
  id       String  @id @default(auto()) @map("_id") @db.ObjectId
  name     String
  slug     String  @unique
  wearType String?

  parent   Category? @relation("subCategory", fields: [parentId], references: [id], onDelete: NoAction, onUpdate: NoAction)
  parentId String?   @db.ObjectId

  children      Category[]      @relation("subCategory")
  products      Product[]
  GroupCategory GroupCategory[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("categories")
}

model Product {
  id           String   @id @default(auto()) @map("_id") @db.ObjectId
  name         String
  slug         String   @unique
  description  String
  price        Float
  mrp          Float
  material     String
  quantity     Int
  inStock      Boolean
  isNewArrival Boolean
  isBestSeller Boolean
  colors       String[]

  sizes      ProductSizes[]
  images     ProductImages[]
  attributes ProductAttributes[]

  category   Category @relation(fields: [categoryId], references: [id], onDelete: Cascade)
  categoryId String   @db.ObjectId

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  CartItem Cart[]
  WishList WishList[]

  GroupCategories GroupCategoryProducts[]

  @@map("products")
}

model ProductAttributes {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String
  value String

  Product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String?  @db.ObjectId
}

model ProductSizes {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  key   String
  value String

  Product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String?  @db.ObjectId
}

model ProductImages {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  key      String
  color    String
  url      String
  publicId String

  Product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  productId String?  @db.ObjectId
}

// user
model User {
  id        String  @id @default(auto()) @map("_id") @db.ObjectId
  name      String?
  email     String? @unique
  phone     String  @unique
  gender    String?
  onBoarded Boolean @default(false)

  addresses Address[]
  orders    Order[]
  cart      Cart[]
  wishlist  WishList[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("users")
}

model otp {
  id       String   @id @default(auto()) @map("_id") @db.ObjectId
  phone    String   @unique
  otp      String
  expireAt DateTime

  @@map("otps")
}

model Address {
  id            String @id @default(auto()) @map("_id") @db.ObjectId
  name          String
  line1         String
  line2         String
  landmark      String
  city          String
  state         String
  country       String
  pincode       String
  phone         String
  residenceType String

  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  userId String @db.ObjectId

  orders Order[]

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("addresses")
}

model Order {
  id        String @id @default(auto()) @map("_id") @db.ObjectId
  userId    String @db.ObjectId
  paymentId String @db.ObjectId
  addressId String @db.ObjectId
  status    String

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  address Address @relation(fields: [addressId], references: [id], onDelete: Cascade)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("orders")
}

model Cart {
  id        String   @id @map("_id")
  quantity  Int
  size      String
  color     String
  productId String   @db.ObjectId
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  User      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("carts")
}

model WishList {
  id        String   @id @map("_id")
  quantity  Int
  size      String?
  color     String
  productId String   @db.ObjectId
  product   Product? @relation(fields: [productId], references: [id], onDelete: Cascade)
  userId    String   @db.ObjectId
  User      User?    @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("wishlists")
}
